<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/head.ejs') %>
</head>
<body>

    <%- include ("../partials/header.ejs") %>

    <h1>Encounter Details</h1>
    <h2><%=encounter.title %></h2>
    <span>Campaign: <%=encounter.campaign %></span>
    <ul>
        <% encounter.playerCharacter.forEach(p => { %>
            <li><%=p %></li>
        <% }) %>
    </ul>
    <ul>
        <% encounter.adversaries.forEach(a => { %>
            <li><%=a %></li>
        <% }) %>
    </ul>
</body>
</html>