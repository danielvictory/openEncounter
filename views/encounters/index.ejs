<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/head.ejs') %>
</head>
<body>
    
    <%- include ("../partials/header.ejs") %>

    <h1>All Open Encounters</h1>
    <form action="/encounters/new" method="GET">
        <input class="encounter-submit" type="submit" value="Create Encounter" />
    </form><br>
    <table>
        <thead>
            <th>Encounter</th>
            <th># PC</th>
            <th># Adv</th>
        </thead>
        <tbody>
            <% encounters.forEach(e => { 
                if (e.isPublic) { %>
            <tr>
                <td><a href="/encounters/<%=e.id %>"><%=e.title %></a></td>
                <td><%=e.playerCharacter.length %></td>
                <td><%=e.adversaries.length %></td>
            </tr>
            <% }}) %>
            
        <tbody>
    </table>

